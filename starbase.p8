version 42
__lua__
-- deep space one
-- by hugh

function _init()
	tsz=8
	cx=7 cy=7 --player reticle
	nodes={}
	
	node(8,8)
end

function _update()
 if btnp(➡️) then cx+=1 end
 if btnp(⬅️) then cx-=1 end
	if btnp(⬇️) then cy+=1 end
	if btnp(⬆️) then cy-=1 end
 if btnp(❎) then
  node(cx,cy)
 end
end

function _draw()
 cls(1)
	rect(cx*tsz,cy*tsz,
						cx*tsz+(tsz+1),cy*tsz+(tsz+1),7)
	for n in all(nodes) do
		spr(n.sp, (n.x*tsz)+1, (n.y*tsz)+1)
	end
end

function node(_x,_y)
 local n={x=_x,y=_y,sp=1}
 add(nodes,n)
end
